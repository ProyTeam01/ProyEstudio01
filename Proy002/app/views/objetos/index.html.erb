<p id="notice"><%= notice %></p>

<h1>Listing Objetos</h1>
<% if params[:id].present? %>
<h2>
    <%= Objeto.where(id: params[:id])[0].titulo %>
</h2>
<%= link_to 'Back', objetos_path(:id => Objeto.where(id: params[:id])[0].padreid) %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Padreid</th>
      <th>Titulo</th>
      <th>Content</th>
      <th>Createdby</th>
      <th>Upvote</th>
      <th>Downvote</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @objetos.each do |objeto| %>
      <tr>
        <td><%= objeto.id %> </td>
        <td><%= objeto.padreid %></td>
        <td><%= objeto.titulo %></td>
        <td><%= objeto.content %></td>
        <td><%= objeto.createdby %></td>
        <td><%= objeto.upvote %></td>
        <td><%= objeto.downvote %></td>
        <td><%= link_to 'Navigate', objetos_path(:id => objeto.id) %></td>
        <td><%= link_to 'Show', objeto %></td>
        <td><%= link_to 'Edit', edit_objeto_path(objeto) %></td>
        <td><%= link_to 'Destroy', objeto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td>
    <a href="#" onclick=data-background-color="#990000">Paint it red</a>
    </td>

    <td>
    <a href="#" onclick=""> Vote Up </a>
    </td>

     <td>
    <a href="#" onclick=""> Vote Down </a>
    </td>

      <td>

      <%= link_to 'Nice', votoup_objeto_path(objeto.id), method: :put , remote: true %>
      <%= link_to 'Sucks', votodown_objeto_path(objeto.id),method: :get ,  remote: true %>
      </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if params[:id].present? %>
  <%= link_to 'New Objeto', new_objeto_path(:pid => params[:id]) %>
<% else %>
  <%= link_to 'New Objeto', new_objeto_path %>
<% end %>
